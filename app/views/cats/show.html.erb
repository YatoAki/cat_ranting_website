<h1><%= @cat.name %> </h1>

<table>
    <% @cat.attributes.each do |name,value| %>
    <tr>
        <th><%= name %></th>
        <td><%= value %></td>
    </tr>
    <% end %>
</table>
<br>
<a href="<%=edit_cat_url(@cat)%>">Edit Cat</a>
<br>
<a href="<%= cats_url()%>"> Cats List</a>

<br><br>

<h2>Rental Requests</h2>
<table>
    <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
    </tr>
        <% @cat.cat_rental_requests.order('start_date').each do |req| %>
    <tr>
            <td><%= req.start_date %></td>
            <td><%= req.end_date %></td>
            <td><%= req.status %></td>
    </tr>
        <% end %>
</table>